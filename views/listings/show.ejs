<%layout("/layouts/boilerplate.ejs")%>

<script>
    const mapToken="<%=process.env.MAP_TOKEN%>";
    const listing=<%-JSON.stringify(listing)%>;
</script>


   <div class="container mt-5">
  <h1 class="fw-bold mb-3"><%= listing.title %></h1>
  <img src="<%= listing.image.url %>" class="listing-image" alt="<%= listing.title %>" />

  <div class="meta-info"><i class="fa-solid fa-user"></i>Owned by <strong><%= listing.owner.username %></strong></div>
  <div class="meta-info"><i class="fa-solid fa-indian-rupee-sign"></i><%= listing.price.toLocaleString("en-IN") %> / night</div>
  <div class="meta-info"><i class="fa-solid fa-location-dot"></i><%= listing.location %>, <%= listing.country %></div>
  <div class="meta-info"><i class="fa-solid fa-align-left"></i><%= listing.description %></div>

  <% if (currUser && (listing.owner._id.equals(currUser._id) || currUser.role === "admin")) { %>
    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  <% } %>

  <hr class="my-5">

  <!-- Review Form -->
  <% if (currUser) { %>
    <h4 class="mb-3">Leave a Review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" class="form-control" rows="4" required></textarea>
        <div class="invalid-feedback">Please leave a comment</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr class="my-4">
  <% } %>

  <!-- All Reviews -->
  <% if (listing.reviews.length > 0) { %>
    <h4>All Reviews</h4>
    <div class="row">
      <% for (let review of listing.reviews) { %>
        <div class="col-md-6 mb-4">
          <div class="card review-card p-3">
            <h5>@<%= review.author.username %></h5>
            <p class="starability-result" data-rating="<%= review.rating %>"></p>
            <p><%= review.comment %></p>
            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>

  <!-- Map -->
  <hr class="my-5">
  <h4 class="mb-3">Where you'll be</h4>
  <div id="map"></div>
</div>
<script src="/js/map.js"></script>







